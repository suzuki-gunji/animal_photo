<%= current_user.nickname %>

<p>
  <%= link_to "投稿する", new_post_path, class: "post" %>
</p>

<% @posts.each do |post| %>
  <ul>
    <li>
      <%= image_tag post.image.variant(resize: '500x500'), class: 'post-image' if post.image.attached? %>
    </li>
    <li>
      <%= post.image %>
      <%= post.title %>
      <%= post.user.nickname %>
    </li>
  </ul>
<% end %>